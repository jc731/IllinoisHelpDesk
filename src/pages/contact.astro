---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- <HeroText tagline="Contact" title="Let's Connect!" /> -->

  <ContactUs
    name = "contact"
    title="We can't wait to get started!"
    subtitle="Drop a message below and let us know how we can help"
    inputs={[
      {
        type: 'text',
        inputType: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'number',
        label: 'Phone Number',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    description="Our team typically responds within 24 hours."
  />

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `We're here to help you get back up and moving. If you're currently experiencing some technical issues, email us now at: <br /><br /> support@centralillinoishelpdesk.com.`
      },
      {
        title: 'Project Support',
        description:
          'We love one time projects too, if you have a major infrastracture project or need help with a specific issue, we would love to talk with you. ',
      },
      {
        title: 'Contact sales',
        description:
          'Email our sales team with questions about purchases, customization options, and how we can best serve your needs. <br /><br /> sales@centralillinoishelpdesk.com',
      },

      // {
      //   title: 'Phone',
      //   description: '+1 (217) 555-5555',
      //   icon: 'tabler:headset',
      // },
      // {
      //   title: 'Email',
      //   description: 'support@centralillinoishelpdesk.com',
      //   icon: 'tabler:mail',
      // },
      // {
      //   title: 'Location',
      //   description: 'Serving Central Illinois',
      //   icon: 'tabler:map-pin',
      // },
    ]}
  />
</Layout>
