---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
// import Steps from '~/components/widgets/Steps.astro';
// import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
// import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import OurPrice from '~/components/common/OurPrice.astro';
const metadata = {
  title: 'Central Illinois Helpdesk',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'What is Tier 1?',
        href: '#tier1',
        target: '',
        icon: 'line-md:chevron-double-down',
      },
    ]}
    image={{
      src: '~/assets/images/illustrations/itsupport.svg',
      alt: 'Central Illinois Helpdesk',
      type: 'svg',
      width: '800px',
      height: '600px',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Tier 1:</span> From Printeres to Passwords
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">Front Line Support</span> to handle fundamental IT issues such as password resets, hardware
      and software troubleshooting, ticket triaging, and more.
    </Fragment>
  </Hero>
  <Features
    id="tier1"
    tagline="Your Front Lines"
    title="What is Tier 1 Support?"
    items={[
      {
        title: 'Basic Troubleshooting',
        description:
          'Encounter a glitch? Reach out to us via email, chat, or phone, and our local technical experts will swiftly resolve your basic IT issues, ensuring minimal downtime.',
        icon: 'clarity:application-solid',
      },
      {
        title: 'Password Resets',
        description:
          "Everyone's locked themselves out (us included), don't become a headline. We'll help keep your data safe, giving you peace of mind and ensuring your business's data is safe.",
        icon: 'clarity:lock-solid',
      },
      {
        title: 'Software Support',
        description:
          'From installation to troubleshooting, our team supports all your software needs. We provide guidance through the complexities of software setup, usage, and optimization.',
        icon: 'clarity:cog-solid',
      },
      {
        title: 'Documentation',
        description:
          'Access comprehensive support for all your hardware, from printers to servers. We provide fast, reliable solutions to keep your operations smooth and efficient.',
        icon: 'clarity:file-solid',
      },
      {
        title: 'Triage and Esclation',
        description:
          'Complex issues can critically impact your business. Our tier 1 team will help identify workarounds, get your ticket in front of the right tier 2 expert, and ensure that your issues are fully resolved quickly.',
        icon: 'clarity:flow-chart-solid',
      },
      {
        title: 'Account Management',
        description:
          'Navigate the complexities of your IT infrastructure with our expert account management services. We partner with you to maximize your technology investments and enhance operational efficiency.',
        icon: 'clarity:cloud-network-line',
      },
    ]}
  />
  <Note />
  <OurPrice />
  <Features2
    title="Most Popular Services"
    subtitle="What do businesses use CI Helpdesk for?"
    items={[
      {
        title: 'Tier 1 Support',
        description:
          "Printers, password resets, account setups, and even propriatary software troubleshooting. We've done it all.",
        icon: 'flat-color-icons:template',
      },
      // {
      //   title: 'IT Procurement',
      //   description:
      //     "Streamline the buying process and ensures you get the best technology at the right price.",
      //   icon: 'flat-color-icons:gallery',
      // },
      {
        title: 'Infrastucture Management',
        description:
          'From VOIP to servers, we manage your entire IT infrastructure, so you can rely on a seamless, secure, and efficient network operations.',
        icon: 'flat-color-icons:parallel-tasks',
      },
      {
        title: 'IT Project Management',
        description:
          'Helping clients navigate the complexities of major IT projects. We help with everything from requirements gathering to implementation.',
        icon: 'flat-color-icons:timeline',
      },
      {
        title: 'Business Process Analysis',
        description:
          "This isn't the typical 'you're doing it wrong' analysis. We work to carefully understand the business to deliver the best solutions.",
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Device Management',
        description:
          "We're helping to manage the complexity of modern end point management to ensure devices are up to date and secure.",
        icon: 'flat-color-icons:multiple-devices',
      },
      // {
      //   title: 'Business Automation',
      //   description: 'Helping to eliminate manual and tedius tasks will reduce errrors, and free your staff to better focus on adding value to your customers.',
      //   icon: 'flat-color-icons:genealogy',
      // },
      // {
      //   title: 'Tier 2+ Support',
      //   description:
      //     'Major system outages and other complex issues. Our team works quickly to reduce downtime and keep things moving.',
      //   icon: 'flat-color-icons:business-contact',
      // },
      {
        title: 'Security Management',
        description:
          "In the age of constant threats, we're helping safeguard business data and digital assets, giving our clients peace of mind.",
        icon: 'flat-color-icons:privacy',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <BlogLatestPosts
    title="Learn More"
    id="blog"
    information={`Explore our collection of articles, guides, and tutorials on web development, design trends, and using AstroWind effectively for your projects.`}
  />

