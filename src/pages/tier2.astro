---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
// import Steps from '~/components/widgets/Steps.astro';
// import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
// import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import OurPrice from '~/components/common/OurPrice.astro';
const metadata = {
  title: 'Central Illinois Helpdesk',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'What is Tier 2?',
        href: '#tier2',
        target: '',
        icon: 'line-md:chevron-double-down',
      },
    ]}
    image={{
      src: '~/assets/images/illustrations/itsupport.svg',
      alt: 'Central Illinois Helpdesk',
      type: 'svg',
      width: '800px',
      height: '600px',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Tier 2:</span> Specialist IT Support.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">Dedicated experts</span> to handle complex, high-priority, or specialized IT issues that
      are critical to the function of your business.
    </Fragment>
  </Hero>
  <Features
    id="tier2"
    tagline="Expert IT Resources"
    title="What is Tier 2 Support?"
    items={[
      {
        title: 'Advanced Troubleshooting',
        description: 'Our seasoned experts provide a shortcut to solutions for hard problems, minimizign downtime',
        icon: 'clarity:cog-solid',
      },
      {
        title: 'Infrastructure Management',
        description: 'We help keep your network secure, managing everything from servers to network devices.',
        icon: 'clarity:flow-chart-line',
      },
      {
        title: 'Complex Software Configuration',
        description: 'Enterprise software support that ranges from deployments to troubleshooting.',
        icon: 'clarity:application-solid',
      },
      {
        title: 'In-Depth Security Management',
        description:
          'From threat detection to prevention, we ensure your business is protected from various security risks.',
        icon: 'clarity:lock-solid',
      },
      {
        title: 'Critical Incident Response',
        description: 'Our team is ready to respond swiftly to minimize downtime and ensure business continuity.',
        icon: 'clarity:flow-chart-solid',
      },
      {
        title: 'Enhanced Account Management',
        description: 'Let us manage your enterprise accounts and keep everything from Azure to AWS in sync and secure.',
        icon: 'clarity:cloud-network-line',
      },
    ]}
  />
  <Note />
  <OurPrice />
  <Features2
    title="Most Popular Services"
    subtitle="What do businesses use CI Helpdesk for?"
    items={[
      {
        title: 'Tier 1 Support',
        description:
          "Printers, password resets, account setups, and even propriatary software troubleshooting. We've done it all.",
        icon: 'flat-color-icons:template',
      },
      // {
      //   title: 'IT Procurement',
      //   description:
      //     "Streamline the buying process and ensures you get the best technology at the right price.",
      //   icon: 'flat-color-icons:gallery',
      // },
      {
        title: 'Infrastucture Management',
        description:
          'From VOIP to servers, we manage your entire IT infrastructure, so you can rely on a seamless, secure, and efficient network operations.',
        icon: 'flat-color-icons:parallel-tasks',
      },
      {
        title: 'IT Project Management',
        description:
          'Helping clients navigate the complexities of major IT projects. We help with everything from requirements gathering to implementation.',
        icon: 'flat-color-icons:timeline',
      },
      {
        title: 'Business Process Analysis',
        description:
          "This isn't the typical 'you're doing it wrong' analysis. We work to carefully understand the business to deliver the best solutions.",
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Device Management',
        description:
          "We're helping to manage the complexity of modern end point management to ensure devices are up to date and secure.",
        icon: 'flat-color-icons:multiple-devices',
      },
      // {
      //   title: 'Business Automation',
      //   description: 'Helping to eliminate manual and tedius tasks will reduce errrors, and free your staff to better focus on adding value to your customers.',
      //   icon: 'flat-color-icons:genealogy',
      // },
      // {
      //   title: 'Tier 2+ Support',
      //   description:
      //     'Major system outages and other complex issues. Our team works quickly to reduce downtime and keep things moving.',
      //   icon: 'flat-color-icons:business-contact',
      // },
      {
        title: 'Security Management',
        description:
          "In the age of constant threats, we're helping safeguard business data and digital assets, giving our clients peace of mind.",
        icon: 'flat-color-icons:privacy',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <BlogLatestPosts title="Learn More" />

