      {
        variant: 'primary',
        text: 'Submit your first ticket today',
        href: 'https://cihelpdesk.freshdesk.com/',
        target: '_blank',
        icon: 'line-md:clipboard-to-clipboard-check-transition',
      },
    ]}
  >
    <Fragment slot="title">
      Central Illinois <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">HelpDesk</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="text-justify">You've made it this far, sign up and let's get started today. We can't wait to help you with your IT needs.</span>
