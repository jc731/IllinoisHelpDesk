---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Prices from '~/components/widgets/Pricing.astro';

const metadata = {
  title: 'Central Illinois Helpdesk',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Learn More',
        href: '#features',
        target: '',
        icon: 'line-md:chevron-double-down',
      },
      { text: 'Submit a Ticket', href: 'https://cihelpdesk.freshdesk.com/' },
    ]}
    image={{ src: '~/assets/images/worker.svg', alt: 'Central Illinois Helpdesk', type: 'svg', width: '800px', height: '600px'}}>
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">IT:</span> Simplified <span class="hidden xl:inline">for small businesses</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Central Illinois Helpdesk</span> is a full-service IT company, specially geared toward small businesses. 
        <span class="hidden md:inline"> We offer a wide range of services ranging from traditional helpdesk email, chat, or in person support to full blown IT project management. </span>
    </Fragment>
  </Hero>

  <Note />

  <Features
    id="features"
    tagline="Why CI HElpdesk?"
    title="Running a business is hard enough. "
    subtitle="Don't get stuck without tech support"
    items={[
      {
        title: 'Helpdesk Support Simplified',
        description:
          'IT issues are frustrating, a quick email, chat, or call and we will get you back to work with the help from our local technical experts.',
        icon: 'clarity:application-solid',
      },
      {
        title: 'Security Management',
        description:
          "Don't become a headline. We'll help keep your data safe, giving you peace of mind and ensuring your business's data is safe.",
        icon: 'clarity:lock-solid',
      },
      {
        title: 'IT Project Support',
        description:
          "IT Projects are tricky. We'll help you navigate the process. Requirements gathering, project management, and implementation.",
        icon: 'clarity:bar-chart-solid',
      },
      {
        title: 'Tier 1 and 2+ Support',
        description:
          'Printers, desktops, laptops, servers, and more. Issues happen, wasting time is not an option to when you need to keep your business going.',
        icon: 'clarity:administrator-solid',
      },
      {
        title: 'Custom Development',
        description:
          "Your business is unique, we'll build custom solutions to help you get the most out of your technology investment and ensuring you're operating at peak efficiency.",
        icon: 'clarity:code-line',
      },
      {
        title: 'Cloud Services',
        description:
          "Your infrastracture is the core of your business. There is no reason to navigate this complex infrastructure alone. We'll help you navigate",
        icon: 'clarity:cloud-network-line',
      },
    ]}
  />
  <Prices
  title="Our prices"
  subtitle="Choose the plan that works for your business"
  prices={[
    {
      title: 'essentials',
      subtitle: 'Great for low volume support',
      price: 29,
      period: 'per month',
      items: [
        {
          description: 'Unlimited Remote Tier 1 Support',
        },
        {
          description: '48-Hour Ticket Response Time',
        },
        {
          description: 'Discounted Tier 2+ Support',
        },
        {
          description: 'Free Project Consultations',
        },
      ],
      callToAction: {
        target: '',
        text: 'Get started',
        href: '/contact?ref=essentials',
      },
    },
    {
      title: 'elevated',
      subtitle: 'Perfect for growing businesses',
      price: 79,
      period: 'Per Month',
      items: [
        {
          description: 'Everything from Essentials',
        },
        {
          description: '24-Hour Ticket Response Time',
        },
        {
          description: 'Unlimited Remote Tier 2 Support',
        },
        {
          description: 'Dedicated Account Specialist',
        },
        {
          description: 'Automatic Ticket Escalation',
        },

      ],
      callToAction: {
        target: '_blank',
        text: 'Get started',
        href: '/contact?ref=elevated',
      },
      hasRibbon: true,
      ribbonTitle: 'popular',
    },
    {
      title: 'rapid response',
      subtitle: 'Best for companies with critical needs',
      price: 199,
      period: 'Per Month',
      items: [
        {
          description: 'Everything from Elevated',
        },
        {
          description: '1-Hour Ticket Response Time',
        },
        {
          description: 'Discounted Onsite Support',
        },
        {
          description: 'Dedicated Knowledge Base Portal',
        },
      ],
      callToAction: {
        target: '_blank',
        text: 'Get started',
        href: '/contact?ref=rapid-response',
      },
    },
  ]}
  />
  <Content
    isReversed
    tagline="Your Personalized Helpdesk Tech Staff"
    title="Local IT Support Services"
    items={[
      {
        title: 'Tier 1 and 2+ Support',
        description:
          'Printers, desktops, laptops, servers, and more. Issues happen, we get it, and wasting time is not an option to when you need to keep your business moving forward.',
      },
      {
        title: 'Rapid Response Times',
        description:
          'We understand better than most that downtime is costly, so we offer packages to ensure that your tickets are responded to within 1-hour and a resolution just as quickly.',
      },
      {
        title: 'Long Term Partnerships',
        description:
          "You need a partner you can trust with critical issues as much as one who's willing to help you navigate modernization and growth, even when it leads to a reduction in billable hours",
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Local IT Support Services Image',
    }}>
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Remote and OnSite Technical Support</h3>
       We ensure our local team is available to help you with your IT needs both onsite and remotely. 
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features2
    title="Most Popular Services"
    subtitle="What do businesses use CI Helpdesk for?"
    items={[
      {
        title: 'Tier 1 Support',
        description: "Printers, password resets, account setups, and even propriatary software troubleshooting. We've done it all.",
        icon: 'flat-color-icons:template',
      },
      // {
      //   title: 'IT Procurement',
      //   description:
      //     "Streamline the buying process and ensures you get the best technology at the right price.",
      //   icon: 'flat-color-icons:gallery',
      // },
      {
        title: 'Infrastucture Management',
        description:
          'From VOIP to servers, we manage your entire IT infrastructure, so you can rely on a seamless, secure, and efficient network operations.',
        icon: 'flat-color-icons:parallel-tasks',
      },
      {
        title: 'IT Project Management',
        description:
          "Helping clients navigate the complexities of major IT projects. We help with everything from requirements gathering to implementation.",
        icon: 'flat-color-icons:timeline',
      },
      {
        title: 'Business Process Analysis',
        description:
          "This isn't the typical 'you're doing it wrong' analysis. We work to carefully understand the business to deliver the best solutions.",
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Device Management',
        description: "We're helping to manage the complexity of modern end point management to ensure devices are up to date and secure.",
        icon: 'flat-color-icons:multiple-devices',
      },
      // {
      //   title: 'Business Automation',
      //   description: 'Helping to eliminate manual and tedius tasks will reduce errrors, and free your staff to better focus on adding value to your customers.',
      //   icon: 'flat-color-icons:genealogy',
      // },
      // {
      //   title: 'Tier 2+ Support',
      //   description:
      //     'Major system outages and other complex issues. Our team works quickly to reduce downtime and keep things moving.',
      //   icon: 'flat-color-icons:business-contact',
      // },
      {
        title: 'Security Management',
        description: "In the age of constant threats, we're helping safeguard business data and digital assets, giving our clients peace of mind.",
        icon: 'flat-color-icons:privacy',
      },
    ]}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

